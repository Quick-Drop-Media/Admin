<section class="gh-canvas">
    <GhCanvasHeader class="gh-canvas-header">
        <h2 class="gh-canvas-title" data-test-screen-title>
            <LinkTo @route="integrations" data-test-link="integrations-back">Integrations</LinkTo>
            <span>{{svg-jar "arrow-right"}}</span>
            GrowSurf
        </h2>
        <section class="view-actions">
            <GhTaskButton @task={{this.save}} @class="gh-btn gh-btn-primary gh-btn-icon" data-test-save-button={{true}} />
        </section>
    </GhCanvasHeader>

    {{#if this.showLeaveSettingsModal}}
        <GhFullscreenModal @modal="leave-settings"
            @confirm={{action "leaveSettings"}}
            @close={{action "toggleLeaveSettingsModal"}}
            @modifier="action wide" />
    {{/if}}

    <section class="view-container">
        <section class="gh-main-section bt app-grid">
            <div class="gh-main-section-block app-detail-heading app-grid">
                <div class="app-cell">
                    <img class="app-icon" src="assets/img/growsurf.png" />
                </div>
                <div class="app-cell">
                    <h3>GrowSurf</h3>
                    <p>Incentivized referral campaigns</p>
                </div>
            </div>
        </section>

        <div class="gh-main-section">
        <h4 class="gh-main-section-header small bn">GrowSurf configuration</h4>
        <section class="gh-main-section-block">
            <div class="gh-main-section-content grey">
                <div>
                    <div class="gh-setting-first {{unless this.settings.growsurf "gh-setting-last"}}">
                        <div class="gh-setting-content">
                            <div class="gh-setting-title">Enable GrowSurf</div>
                            <div class="gh-setting-desc mb0">Enable <a href="https://growsurf.com/" target="_blank">GrowSurf</a> for tracking referrals</div>
                        </div>
                        <div class="gh-setting-action">
                            <div class="for-checkbox">
                                <label for="growsurf" class="checkbox">
                                    <input
                                        type="checkbox"
                                        checked={{this.settings.growsurf}}
                                        id="growsurf"
                                        name="growsurf"
                                        onclick={{action "update" value="target.checked"}}
                                        data-test-growsurf-checkbox
                                    >
                                    <span class="input-toggle-component"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    {{#liquid-if this.settings.growsurf class=""}}
                    <div class="gh-setting-last gh-setting-growsurf-liquid">
                        <div class="gh-setting-content gh-setting-content--no-action">
                            <div class="gh-setting-title">API Key</div>
                            <div class="gh-setting-desc"> Learn how to find your API key <a href="https://docs.growsurf.com/integrate/rest-api#step-1-get-your-api-key">here</a></div>
                            <div class="gh-setting-content-extended">
                                <GhFormGroup @class="no-margin" @errors={{this.settings.errors}} @hasValidated={{this.settings.hasValidated}} @property="growsurfApiKey">
                                    <GhTextInput
                                        @placeholder="XXXXXXXX"
                                        @name="growsurf_api_key"
                                        @value={{this.settings.growsurfApiKey}}
                                        @keyEvents={{hash
                                            Enter=(action "save")
                                        }}
                                    />
                                    <GhErrorMessage @errors={{this.settings.errors}} @property="growsurfApiKey"/>
                                </GhFormGroup>
                            </div>
                        </div>
                    </div>

                    <div class="gh-setting-last gh-setting-growsurf-liquid">
                        <div class="gh-setting-content gh-setting-content--no-action">
                            <div class="gh-setting-title">Campaign ID</div>
                            <div class="gh-setting-desc">The ID of your GrowSurf campaign to add participants to</div>
                            <div class="gh-setting-content-extended">
                                <GhFormGroup @class="no-margin" @errors={{this.settings.errors}} @hasValidated={{this.settings.hasValidated}} @property="growsurfCampaignId">
                                    <GhTextInput
                                        @placeholder="abc123"
                                        @name="growsurf_campaign_id"
                                        @value={{this.settings.growsurfCampaignId}}
                                        @keyEvents={{hash
                                            Enter=(action "save")
                                        }}
                                    />
                                    <GhErrorMessage @errors={{this.settings.errors}} @property="growsurfCampaignId"/>
                                </GhFormGroup>
                            </div>
                        </div>
                    </div>
                    {{/liquid-if}}
                </div>
            </div>
        </section>
        </div>
    </section>
</section>
